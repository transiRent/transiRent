<h2>View Offer</h2>
<h3>{{offer.name}}</h3>
<p>{{offer.type}}</p>
<p>{{offer.description}}</p>
<div>
  <h4>Adress:</h4>
  <p>
    {{offer.adress.street}} {{offer.adress.number}}<br>
    {{offer.adress.code}} {{offer.adress.city}}
  </p>
</div>
<p>Owner: <a href="/user/{{offer.owner._id}}">{{offer.owner.name}}</a></p>
<div>
  <h4>Booking:</h4>
  <form action="/offer/book/{{offer._id}}" method="post">
    {{#each offer.timeslots}}
      <input type="checkbox" name="time" id="{{offer.timeslots.time}}" value="{{offer.timeslots.time}}">
      <label for="{{offer.timeslots.time}}">{{offer.timeslots.time}}</label>
    {{/each}}
    <button type="submit">Book</button>
  </form>
</div>