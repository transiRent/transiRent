<h2>{{offer.name}}</h2>
{{#if offer.imgPath}}
<img src="{{offer.imgPath}}" class="img-thumbnail" alt="Picture of offer">
{{/if}}
<p>{{offer.type}}</p>
<p>{{offer.description}}</p>
<div>
  <h4>Address:</h4>
  <p>
    {{offer.address.street}} {{offer.address.number}}<br>
    {{offer.address.code}} {{offer.address.city}}
  </p>
</div>
<p>Owner: <a href="/user/{{offer.owner._id}}">{{offer.owner.username}}</a></p>
<div>
  <h4>Booking:</h4>
  <form action="/offers/{{offer._id}}/book" method="POST">
    {{{output}}}
    <button type="submit">Book</button>
  </form>
</div>